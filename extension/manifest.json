{
  "manifest_version": 3,
  "name": "Summarizer",
  "description": "A minimal summarizer",
  "version": "0.0.1",
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png"
  },
  "action": {
    "default_title": "Summarizer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": []
}
